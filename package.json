{
  "name": "tim-kleyersburg.dev",
  "version": "1.0.0",
  "description": "Tims personal site",
  "author": "Tim Kleyersburg <timkley@gmail.com>",
  "license": "UNLICENSED",
  "scripts": {
    "prepostcss": "rm -rf dist/css/*",
    "postcss": "postcss -c postcss.config.json css/bundle.css -d dist/css/",
    "prejs": "rm -rf dist/js/*",
    "js": "mkdir -p dist/js && browserify js/bundle.js -o dist/js/bundle.js -t [ babelify --presets [ @babel/preset-env ] ]",
    "uglify": "uglifyjs dist/js/bundle.js --compress --mangle -o dist/js/bundle.js",
    "build": "npm run postcss && npm run js && npm run uglify",
    "watch:css": "watch 'npm run postcss' css/",
    "watch:js": "watch 'npm run js' js/",
    "watch": "npm run watch:css & npm run watch:js"
  },
  "devDependencies": {
    "@babel/core": "^7.5.4",
    "@babel/preset-env": "^7.5.4",
    "babelify": "^10.0.0",
    "browserify": "^16.3.0",
    "postcss-cli": "^6.1.3",
    "postcss-css-variables": "^0.13.0",
    "postcss-custom-media": "^7.0.8",
    "postcss-import": "^12.0.1",
    "postcss-nested": "^4.1.2",
    "uglify-js": "^3.6.0",
    "watch": "^1.0.2"
  },
  "browserslist": [
    "last 2 version",
    "> 2%",
    "not dead"
  ]
}
