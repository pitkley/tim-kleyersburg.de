{
  "name": "tim-kleyersburg.dev",
  "version": "0.5.0",
  "description": "Tims personal site",
  "author": "Tim Kleyersburg <timkley@gmail.com>",
  "license": "UNLICENSED",
  "scripts": {
    "prepostcss": "rm -rf dist/css/*",
    "postcss": "postcss -c postcss.config.json css/bundle.css -d dist/css/",
    "prepostjs": "rm -rf dist/js/*",
    "js": "mkdir -p dist/js && browserify js/bundle.js -o dist/js/bundle.js",
    "uglify": "uglifyjs dist/js/bundle.js --compress --mangle -o dist/js/bundle.js",
    "build": "npm run postcss && npm run js && npm run uglify",
    "watch:css": "watch 'npm run postcss' css/",
    "watch:js": "watch 'npm run js' js/",
    "watch": "npm run watch:css & npm run watch:js"
  },
  "devDependencies": {
    "browserify": "^13.1.0",
    "postcss-cli": "^2.5.2",
    "postcss-cssnext": "^2.7.0",
    "postcss-import": "^8.1.2",
    "uglify-js": "^2.7.3",
    "watch": "^0.19.2"
  }
}
