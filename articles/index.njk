---
layout: base
tags: null
pagination:
    data: collections.post
    size: 10
---

<div class="max-w-lg mx-auto space-y-3">
    {% for post in pagination.items %}
        <p>
            <a href="{{ post.url }}">{{ post.data.title }} on {{ post.data.date|formattedDate }}</a>
        </p>
    {% endfor %}
</div>
