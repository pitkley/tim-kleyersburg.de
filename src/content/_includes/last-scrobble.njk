{% extends '_last-thing.njk' %}
{% set type = 'scrobble' %}

{%- block link -%}
    <a href="https://www.last.fm/user/Timmotheus">@timmotheus</a>
{%- endblock -%}

{%- block content -%}
    <div class="text-center">
        <img width="64" height="64" class="mx-auto mb-2 rounded shadow" :src="result.image[1]['#text']" :srcset="`${result.image[1]['#text']} 1x, ${result.image[2]['#text']} 2x`" alt="Album image of the last scrobble" :alt="`${result.artist['#text']} - ${result.name}`">
        <div class="font-bold truncate" x-text="result.name"></div>
        <div class="text-sm truncate" x-text="result.artist['#text']"></div>
    </div>
{%- endblock -%}